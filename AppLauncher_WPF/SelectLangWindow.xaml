<Window x:Class="AppLauncher_WPF.SelectLangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppLauncher_WPF"
        mc:Ignorable="d"
        Title="" Height="180" Width="316" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <RadioButton Content="中文" IsChecked="True" HorizontalAlignment="Left" Margin="35,60,0,0" VerticalAlignment="Top" Checked="ZH_Checked"/>
        <RadioButton Content="English" HorizontalAlignment="Left" Margin="95,60,0,0" VerticalAlignment="Top" Checked="EN_Checked"/>
        <Label Content="请选择语言 (Please select your language):" HorizontalAlignment="Left" Margin="20,25,0,0" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="80" Click="Button_Click" Height="24"/>

    </Grid>
</Window>
