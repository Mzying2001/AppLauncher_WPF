<Application x:Class="AppLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AppLauncher"
             xmlns:ViewModels="clr-namespace:AppLauncher.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ViewModels:ViewModelLocator x:Key="Locator"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Global.xaml"/>
                <ResourceDictionary Source="Views/Converters/Global.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
